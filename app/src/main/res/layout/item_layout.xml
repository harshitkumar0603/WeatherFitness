<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemlayoutlist"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/HeaderID"
        android:layout_width="13dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/TextViewID"
        app:layout_constraintEnd_toStartOf="@+id/HeaderDate"
        app:layout_constraintStart_toEndOf="@+id/itemlayoutlist"
        app:layout_constraintTop_toBottomOf="@+id/itemlayoutlist"
        tools:text="ID" />

    <TextView
        android:id="@+id/TextViewID"
        android:layout_width="15dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:text="ID"
        android:textAlignment="center"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/TextViewDate"
        app:layout_constraintStart_toEndOf="@+id/itemlayoutlist"
        app:layout_constraintTop_toBottomOf="@+id/HeaderID" />

    <TextView
        android:id="@+id/HeaderDate"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/TextViewDate"
        app:layout_constraintEnd_toStartOf="@+id/HeaderLocation"
        app:layout_constraintStart_toEndOf="@+id/HeaderID"
        tools:text="DateTime" />

    <TextView
        android:id="@+id/TextViewDate"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="DateTime"
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/TextViewLocation"
        app:layout_constraintStart_toEndOf="@+id/TextViewID"
        app:layout_constraintTop_toBottomOf="@+id/HeaderLocation" />

    <TextView
        android:id="@+id/HeaderLocation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textAlignment="textStart"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/TextViewLocation"
        app:layout_constraintEnd_toStartOf="@+id/HeaderScore"
        app:layout_constraintStart_toEndOf="@+id/HeaderDate"
        app:layout_constraintTop_toTopOf="@+id/itemlayoutlist"
        tools:text="Location" />

    <TextView
        android:id="@+id/TextViewLocation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textAlignment="textStart"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/TextViewScore"
        app:layout_constraintStart_toEndOf="@+id/TextViewDate"
        app:layout_constraintTop_toBottomOf="@+id/HeaderLocation"
        tools:text="Location" />

    <TextView
        android:id="@+id/HeaderScore"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/TextViewScore"
        app:layout_constraintEnd_toStartOf="@+id/itemlayoutlist"
        app:layout_constraintStart_toEndOf="@+id/HeaderLocation"
        tools:text="Score" />

    <TextView
        android:id="@+id/TextViewScore"
        android:layout_width="37dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/itemlayoutlist"
        app:layout_constraintStart_toEndOf="@+id/TextViewLocation"
        app:layout_constraintTop_toBottomOf="@+id/HeaderScore" />
</android.support.constraint.ConstraintLayout>